PortSystem          1.0

name                Mactracker
version             5.3
categories          docs
platforms           darwin
maintainers         pr0d1r2
description         Get info on any Mac
homepage            http://www.mactracker.ca/
master_sites        http://www.mactracker.ca/downloads/
distname            Mactracker_${version}

checksums           md5     9822cc84899a5e29dadf91f8e004ff54 \
                    sha1    f5555422de27c37eb087ceb48a3c74b067c6ed09 \
                    rmd160  fec74fe8bbfb664c088bca8bf7f694020e415340

use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot {
    copy ${worksrcpath}.app ${destroot}${applications_dir}
}
