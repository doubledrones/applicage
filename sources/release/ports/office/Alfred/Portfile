PortSystem                  1.0

name                        Alfred
version                     0.9.9_146
platforms                   macosx
categories                  office
maintainers                 pr0d1r2
license                     freeware
supported_archs             i386

description                 Quick launcher

homepage                    http://www.alfredapp.com/
master_sites                http://media.alfredapp.com/update/

use_zip                     yes
distname                    alfred_${version}

checksums           md5     91c84c2838c7a5afb51f2aa90319f90d \
                    sha1    813d172fe2b872e162e1538964bd642ac65d6746 \
                    rmd160  25d296df350538569a8da8d583d55dbc17fa177e

use_configure               no

build {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot {
  copy ${workpath}/${name}.app ${destroot}${applications_dir}
}
