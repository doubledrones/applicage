version             3.5.3
categories          office
platforms           darwin
maintainers         pr0d1r2
description         1Password.app is a productivity application for easy password storage
homepage            http://agilewebsolutions.com/onepassword
master_sites        http://cdn.agile.ws/aws/dmg/1PW3/English/
distname            1Password-${version}

checksums           md5     37ad8ed552d928a6a9481934f74c47dc \
                    sha1    26f98272c8cf527b34991ae8ea1ac784edbb02fb \
                    rmd160  8c6437d65a1e0f38a58eb3330f65fb8a96fc5ba4
use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

