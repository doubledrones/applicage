homepage            http://agilewebsolutions.com/onepassword
master_sites        http://cdn.agile.ws/aws/dmg/1PW3/English/
distname            1Password-${version}

checksums           md5     78c7d48432464d1f6101c218482f0a9c \
                    sha1    0311898d2dcea7ee88ddf95f5c409020a81a5665 \
                    rmd160  9f8292efacfb7e644c497db3edaa1f903fe4197a
use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

