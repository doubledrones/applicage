PortSystem          1.0

name                1Password.app
version             3.5.2
categories          office
platforms           darwin
maintainers         pr0d1r2
description         1Password.app is a productivity application for easy password storage
homepage            http://code.google.com/p/macvim #TODO
master_sites        http://cdn.agile.ws/aws/dmg/1PW3/English/
distname            1Password-${version}

checksums           md5     60b6738cb4929df28ada806d2b607103 \
                    sha1    67a4c024ac0c07d0ccf66f42327c827b69744897 \
                    rmd160  dd510fb89c579c4c3d9ae9a9dd7f9e2461b54851
use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot { #TODO
    copy ${worksrcpath} ${destroot}${applications_dir}
}
