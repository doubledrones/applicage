                    sha1    7b230ebca741addd2a736200e308c5e2e875519b \
                    rmd160  5d2da84bdb0bc8efddbc34f02383ed0e52e68174
use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

