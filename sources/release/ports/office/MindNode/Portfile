PortSystem          1.0

name                MindNode
version             1.7.2
categories          office
platforms           darwin
maintainers         pr0d1r2
description         KeyboardMaestro is a productivity application for quick macros
homepage            http://www.mindnode.com/
master_sites        http://www.mindnode.com/download/
distname            MindNode

checksums           md5     f17fc10d317c9528173b402138a3b77a \
                    sha1    b5d5b80a976bf90cf7f9886f1fe246fa4f4f0f5c \
                    rmd160  e48489a6ab1d77200bb5a58453ecd883ae7a129d

use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot {
    copy ${workpath}/${name}.app ${destroot}${applications_dir}
}
