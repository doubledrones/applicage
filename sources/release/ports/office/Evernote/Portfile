PortSystem                  1.0

name                        Evernote
version                     158341
platforms                   macosx
categories                  office
maintainers                 pr0d1r2
license                     freeware
supported_archs             i386

description                 Remember everything.
homepage                    http://evernote.com/
master_sites                http://evernote.s3.amazonaws.com/mac/release/

use_zip                     yes
distname                    ${name}_${version}

checksums           md5     b85a014120a44b57b033c3cbc500ca4a \
                    sha1    0a0cdedbc4496aa84feefcd83ca42f2ab246cad2 \
                    rmd160  f4c159dc9cd647a8efca43bc5661f9c7b5f27eb9

use_configure               no

build {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot {
  copy ${workpath}/${name}.app ${destroot}${applications_dir}
}
