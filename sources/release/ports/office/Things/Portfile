PortSystem          1.0

name                Things
version             1.4.7
categories          office
platforms           darwin
maintainers         pr0d1r2
description         Things.app is a productivity application for GTD system
homepage            http://culturedcode.com/things/
master_sites        http://culturedcode.cachefly.net/things/
distname            Things_${version}

checksums           md5     242af79dc6a920c167aeccd9cdfef0f2 \
                    sha1    f103870e4e5be9d544e33a7f084c9ca61e4e2761 \
                    rmd160  d65786ad408111b8588957dab75796e0ea217dc2

use_zip             yes
worksrcdir          ${name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot {
    copy ${worksrcpath}.app ${destroot}${applications_dir}
}
