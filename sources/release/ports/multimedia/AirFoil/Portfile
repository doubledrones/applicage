PortSystem          1.0

set real_name       AirFoil
name                ${real_name}
set version_major   4
set version_minor   6
set version_patch   2
version             ${version_major}.${version_minor}.${version_patch}
categories          multimedia
platforms           darwin
maintainers         pr0d1r2
description         Wireless audio around your house
homepage            http://www.rogueamoeba.com/airfoil/mac/
master_sites        http://www.rogueamoeba.com/airfoil/download/
distname            Airfoil

checksums           md5     0f216d6b70c27547b7b652e9e16383fd \
                    sha1    20fedb43c1cd46cf7db02170db02101c2b165c49 \
                    rmd160  0d8887b0d534a8ab495e0696b7aa2e5e7a8fc041

use_zip             yes
worksrcdir          ${real_name}

configure           {}
build               {}

pre-fetch {
    if {${os.platform} == "darwin" && ${os.major} < 9} {
        ui_error "${name} does only run on Mac OS X 10.5 or greater."
        return -code error "incompatible Mac OS X version"
    }
}

destroot {
    copy ${workpath}/${real_name}/${real_name}.app ${destroot}${applications_dir}
}
